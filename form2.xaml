        <Label Content="BornDate:" HorizontalAlignment="Left" Margin="84,160,0,0" VerticalAlignment="Top" Width="68"/>
        <DatePicker x:Name="Borndate_box" HorizontalAlignment="Left" Margin="157,160,0,0" VerticalAlignment="Top" Width="131"/>
        <Label Content="Day Wave:" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Center" Width="70"/>
        <TextBox x:Name="DayWave_box" HorizontalAlignment="Left" Margin="157,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="131"/>
        <Label Content="Work Days:" HorizontalAlignment="Left" Margin="76,253,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox x:Name="WorkDay_box" HorizontalAlignment="Left" Margin="157,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131"/>
        <RadioButton x:Name="Gender_choice_male_btn" Content="Male" HorizontalAlignment="Left" Margin="172,124,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="Gender_choice_female_btn" Content="female" HorizontalAlignment="Left" Margin="254,124,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
